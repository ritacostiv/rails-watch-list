<div class="hero-banner">
  <div class="hero-overlay"></div>
  <img src="https://img.freepik.com/premium-photo/cat-movie-cinema-eating-popcorn-cool-happy-cat_162695-13300.jpg" alt="Movie cat" class="hero-image">
  <h1 class="hero-title">Save your favorite movies</h1>
</div>

<div class="container">
  <h2 class="section-title">My Movie Lists</h2>

  <div class="cards-grid">
    <% @lists.each do |list| %>
      <div class="list-card">
        <h3 class="list-title"><%= list.name %></h3>
        <p class="list-count"><%= pluralize(list.movies.count, 'movie') %></p>
        <%= link_to "See details", list_path(list), class: "btn-primary" %>
      </div>
    <% end %>
  </div>

  <%= link_to new_list_path, class: "btn-create" do %>
    <i class="fas fa-plus"></i> Create a movie list
  <% end %>
</div>
